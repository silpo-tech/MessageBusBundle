<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         cacheResult="false"
         cacheDirectory=".phpunit.cache"
         testdox="true"
         bootstrap="tests/bootstrap.php"
>
    <coverage/>
    <php>
        <env name="KERNEL_CLASS" value="MessageBusBundle\Tests\Kernel"/>
        <env name="APP_ENV" value="test" force="true"/>
        <env name="APP_DEBUG" value="true" force="true"/>
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="disabled=1"/>
    </php>

    <source>
        <include>
            <directory>./src/</directory>
        </include>
        <exclude>
            <directory>./src/Tests/</directory>
            <directory>./src/Exception/</directory>
            <directory>./src/Contracts/</directory>
            <directory>./src/Resources/</directory>
            <directory>./src/Events/</directory>
            <directory>./src/DependencyInjection/CompilerPass</directory>
        </exclude>
    </source>

    <testsuites>
        <testsuite name="Unit">
            <directory>./tests/TestCase/Unit</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>./tests/TestCase/Integration</directory>
        </testsuite>
    </testsuites>
</phpunit>
